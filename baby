    <style>
        /* Main Body Styles */
        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            text-align: center;
            background: linear-gradient(135deg, #FFDEE9, #FFB6C1); /* Soft pink gradient */
            background-size: cover;
            background-attachment: fixed;
            color: #333;
            overflow: hidden;
            position: relative;
        }

        /* Container Styling */
        .container {
            padding: 20px;
            position: relative;
            z-index: 2;
        }

        .cute-button {
            background-color: #FFADAD;
            border: none;
            padding: 10px 20px;
            font-size: 18px;
            border-radius: 10px;
            cursor: pointer;
        }

        .hidden {
            display: none;
            margin-top: 10px;
        }

        .heart {
            font-size: 24px;
            cursor: pointer;
        }

        .gif-container {
            margin: 20px 0;
        }

        /* Floating Heart Animation */
        .heart-float {
            position: absolute;
            top: 0;
            left: 0;
            font-size: 40px;
            color: #FF6F91;
            animation: floatHeart 10s infinite;
        }

        @keyframes floatHeart {
            0% {
                transform: translate(0, 0);
            }
            50% {
                transform: translate(50px, -100px);
                opacity: 0.5;
            }
            100% {
                transform: translate(100px, 0);
                opacity: 1;
            }
        }

        /* Background Hearts Pattern */
        .background-hearts {
            position: absolute;
