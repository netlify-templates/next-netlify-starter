<body>
    <!-- Subtle Heart Background -->
    <div class="background-hearts"></div>

    <!-- Floating Hearts -->
    <div class="heart-float" style="animation-delay: 2s;">❤️</div>
    <div class="heart-float" style="animation-delay: 4s;">💖</div>
    <div class="heart-float" style="animation-delay: 6s;">💕</div>

    <div class="container">
        <h1>🐻💕 For My Sweet Jade 💕🐻</h1>
        <p>Happy Valentine's Day, my love! Here's a special little space just for you. 😘</p>
        
        <div class="gif-container">
            <img src="https://media.tenor.com/QbZMGVSP1BUAAAAC/milk-and-mocha-kiss.gif" alt="Milk & Mocha Kissing" width="300">
        </div>
        
        <button class="cute-button" onclick="showLoveLetter()">Open Your Love Letter 💌</button>
        <p id="love-letter" class="hidden">My dearest Jade, you are my sunshine, my warmth, my forever bear. Every day with you is sweeter than honey, and I can’t wait for all the moments we’ll share. Love you endlessly! 💖</p>
        
        <button class="cute-button" onclick="sendVirtualHug()">Send Virtual Hug 🫂</button>
        <p id="hug-response" class="hidden">*squeezes you tight* You just got the biggest, warmest bear hug! 🐻💞</p>
        
        <h2>Why I Love You 😍</h2>
        <p class="heart" onclick="revealLove(1)">❤️</p><p id="love1" class="hidden">You're my safe space.</p>
        <p class="heart" onclick="revealLove(2)">💖</p><p id="love2" class="hidden">You make me laugh like no one else.</p>
        <p class="heart" onclick="revealLove(3)">💕</p><p id="love3" class="hidden">You're the kindest soul I know.</p>
        
        <h2>Guess Our Special Word! 🤔</h2>
        <input type="text" id="guess" placeholder="Type your guess here">
        <button class="cute-button" onclick="checkGuess()">Check</button>
        <p id="guess-result" class="hidden"></p>
        
        <h2>Spin the Love Wheel! 🎡</h2>
        <button class="cute-button" onclick="spinWheel()">Spin</button>
        <p id="wheel-result" class="hidden"></p>
        
        <h2>Compliment Generator 🌟</h2>
        <button class="cute-button" onclick="generateCompliment()">Give Me a Compliment</button>
        <p id="compliment-result" class="hidden"></p>
        
        <h2>Love Memory Timeline 🕰️</h2>
        <input type="text" id="memory-input" placeholder="Share a memory with me..." class="cute-button" style="font-size: 16px; padding: 8px; margin: 10px;">
        <button class="cute-button" onclick="addMemory()">Add Memory</button>
        
        <div class="memory-container">
            <h3>Our Special Memories:</h3>
            <ul id="memory-list"></ul>
        </div>

        <h2>Choose Your Mood 😄</h2>
        <div class="mood-selector">
            <button class="mood-button" style="background-color: #FFC0CB;" onclick="changeMood('happy')">Happy</button>
            <button class="mood-button" style="background-color: #FFFF00;" onclick="changeMood('excited')">Excited</button>
            <button class="mood-button" style="background-color: #A0A0A0;" onclick="changeMood('in love')">In Love</button>
        </div>
        <p id="mood-message" class="hidden"></p>
    </div>
    
    <script>
        function showLoveLetter() {
            document.getElementById("love-letter").style.display = "block";
        }
        function sendVirtualHug() {
            document.getElementById("hug-response").style.display = "block";
        }
        function revealLove(num) {
            document.getElementById("love" + num).style.display = "block";
        }
        function checkGuess() {
            const guess = document.getElementById("guess").value.toLowerCase();
            const result = document.getElementById("guess-result");
            if (guess === "jbear") {
                result.textContent = "Yay! You got it right! 🐻💕";
            } else {
                result.textContent = "Oops! Try again! 🙈";
            }
            result.style.display = "block";
        }
        function spinWheel() {
            const messages = ["You get 100 kisses! 😘", "You get a virtual cuddle! 🤗", "You get a love poem! 💌", "You get an extra 'I love you' today! 💖"];
            const randomMessage = messages[Math.floor(Math.random() * messages.length)];
            const result = document.getElementById("wheel-result");
            result.textContent = randomMessage;
            result.style.display = "block";
        }
        function generateCompliment() {
            const compliments = [
                "You're the best thing that ever happened to me! 💖",
                "You're so strong and inspiring! 💪",
                "You're my favorite person in the world! 🌍",
                "You light up every room you walk into! ✨"
            ];
            const randomCompliment = compliments[Math.floor(Math.random() * compliments.length)];
            const result = document.getElementById("compliment-result");
            result.textContent = randomCompliment;
            result.style.display = "block";
        }
        function addMemory() {
            const memoryInput = document.getElementById("memory-input").value;
            if (memoryInput.trim() !== "") {
                const memoryList = document.getElementById("memory-list");
                const li = document.createElement("li");
                li.textContent = memoryInput;
                memoryList.appendChild(li);
                document.getElementById("memory-input").value = ''; // Clear the input field
            }
        }
        function changeMood(mood) {
            const moodMessage = document.getElementById("mood-message");
            let message = "";
            if (mood === 'happy') {
                message = "You’re feeling happy! Let’s celebrate that joy! 😄";
                document.body.style.backgroundColor = "#FFFB99";
            } else if (mood === 'excited') {
                message = "You’re excited! Let’s make today awesome! 🎉";
                document.body.style.backgroundColor = "#FFEE58";
            } else if (mood === 'in love') {
                message = "You’re in love! Everything feels magical! 💖";
                document.body.style.backgroundColor = "#FAD0C4";
            }
            moodMessage.textContent = message;
            moodMessage.style.display = "block";
        }
    </script>
</body>
